<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 액션/타이틀바 제거 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@color/colorAccent</item>
    </style>

    <!-- Loading Splash 테마 -->
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- 인트로 텍스트뷰 테마 -->
    <style name="IntroTextView" parent="android:Widget.TextView">
        <item name="android:textColor">#429278</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

    <!-- 로그인 및 가입 텍스트뷰 테마 -->
    <style name="LogInTextView" parent="android:Widget.TextView">
        <item name="android:textColor">#429278</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>

</resources>