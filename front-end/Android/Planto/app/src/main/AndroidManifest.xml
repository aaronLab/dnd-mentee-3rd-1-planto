<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.example.planto.MyApplication">

        <activity
            android:name=".SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstIntroActivity" />
        <activity android:name=".SecondIntroActivity" />
        <activity android:name=".ThirdIntroActivity" />
        <activity android:name=".user.LogInActivity" />
        <activity android:name=".user.JoinActivity" />
    </application>

</manifest>